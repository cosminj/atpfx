<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.google.code.atpfx">
	<!--
		if the package attribute is not set to hibernate-mapping tag, you need
		to qualify the class
	-->
	<class name="com.google.code.atpfx.data.Candle" table="CANDLES">
		<id name="id" column="ID">
			<generator class="sequence">
				<param name="sequence">CANDLES_SEQ</param>
			</generator>
		</id>
		<property name="signalProviderId" column="SIGNALPROVIDER_ID" />
		<property name="pairId" column="PAIR_ID" />
		<property name="intervalId" column="INTERVAL_ID" />
		<many-to-one name="open" column="OPEN_TICK_ID" class="com.google.code.atpfx.data.Tick" />
		<many-to-one name="close" column="CLOSE_TICK_ID" class="com.google.code.atpfx.data.Tick" />
		<many-to-one name="high" column="HIGH_TICK_ID" class="com.google.code.atpfx.data.Tick" />
		<many-to-one name="low" column="LOW_TICK_ID" class="com.google.code.atpfx.data.Tick" />
	</class>
</hibernate-mapping>